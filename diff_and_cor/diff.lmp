# -l none -var l 2.8712 -var t 700
#------------------------------------------------
shell mkdir data
shell mkdir data/dumps_$t
shell mkdir data/restarts_$t
shell mkdir data/other_$t
#------------------------------------------------
variable cell_size equal 10
variable total_time equal 100 #ps
variable total_timesteps equal ${total_time}/dt
units           metal
boundary        p p p
atom_style      atomic
#------------------------------------------------
lattice         bcc $l
region          box block 0 ${cell_size} 0 ${cell_size} 0 ${cell_size}
create_box      1 box
create_atoms    1 box
mass            1 55.845
#------------------------------------------------
pair_style      eam/fs
pair_coeff      * * ../Fe_mm.eam.fs Fe
#------------------------------------------------
create_atoms 1 single 5.5 5.333 5.333
#------------------------------------------------
min_style cg
minimize 1e-9 1e-9 5000 5000
#------------------------------------------------
velocity        all create $(2*v_t) 352839
fix             1 all nve
run 1000
reset_timestep 0
#------------------------------------------------
compute msd all msd
variable n equal count(all)
variable time equal time
variable temp equal temp
variable press equal press
variable sia_msd equal c_msd[4]*$n
fix data all print 1000 '${time};${sia_msd};${temp};${press}' &
file ./data/other_$t/thermo_diff screen no title 'time;sia_msd;temp;press'

dump sia_dump all custom 1000 ./data/dumps_$t/sia.dump x y z
write_restart ./data/restarts_$t/0
restart 1000 ./data/restarts_$t/*
thermo_style custom time temp press
thermo 10000
run ${total_timesteps}
#------------------------------------------------
