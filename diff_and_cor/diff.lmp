# -l none -var l 2.8712 -var t 700
#------------------------------------------------
shell mkdir diff_data
shell mkdir diff_data/$t
shell mkdir restarts
shell mkdir restarts/$t
#------------------------------------------------
variable cell_size equal 10
variable total_time equal 100 #ps
variable total_timesteps equal ${total_time}/dt
# variable msd_freq equal ${total_timesteps}/10000
# variable thermo_freq equal ${total_timesteps}/10000
units           metal
boundary        p p p
atom_style      atomic
#------------------------------------------------
lattice         bcc $l
region          box block 0 ${cell_size} 0 ${cell_size} 0 ${cell_size}
create_box      1 box
create_atoms    1 box
mass            1 55.845
#------------------------------------------------
pair_style      eam/fs
pair_coeff      * * ../Fe_mm.eam.fs Fe
#------------------------------------------------
create_atoms 1 single 5.5 5.333 5.333
#------------------------------------------------
min_style cg
minimize 1e-9 1e-9 5000 5000
run 0
reset_timestep 0
#------------------------------------------------
velocity        all create $(2*v_t) 352839
timestep 0.001
fix             1 all nve
#------------------------------------------------
compute msd all msd
compute cna all cna/atom 3.45
variable n equal count(all)
variable time equal time
variable temp equal temp
variable press equal press
variable sia_msd equal c_msd[4]*$n
fix thermo_data all print 1000 '${time};${temp};${press}' &
file ./diff_data/$t/thermo_data screen no title 'time;temp;press'

fix msd_data all print 1000 '${time};${sia_msd}' &
file ./diff_data/$t/msd_data screen no title 'time;sia_msd'
dump		d0 all custom 1000 dump/sia_$t.dump x y z
restart 1000 ./restarts/$t/*
thermo_style custom time temp press
thermo 1000
run ${total_timesteps}
#------------------------------------------------
