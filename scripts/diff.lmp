# -var cell 10 -var lattice 2.9151 -var temp 1700 -var simtime 50000 (ps) -screen none
#------------------------------------------------
variable dumps_path string ../data_cell${cell}_time${simtime}/data_${temp}/dumps
variable other_path string ../data_cell${cell}_time${simtime}/data_${temp}
shell mkdir ../data_cell${cell}_time${simtime}
shell mkdir ../data_cell${cell}_time${simtime}/data_${temp}
shell mkdir ../data_cell${cell}_time${simtime}/data_${temp}/dumps
log ${other_path}/diff.log
#------------------------------------------------
variable        total_timesteps equal ${simtime}/dt
units           metal
boundary        p p p
atom_style      atomic
#------------------------------------------------
lattice         bcc ${lattice} origin 0.5 0.5 0.5
region          box block 0 ${cell} 0 ${cell} 0 ${cell}
create_box      1 box
create_atoms    1 box
mass            1 55.845
#------------------------------------------------
pair_style      eam/fs
pair_coeff      * * ../other/Fe_mm.eam.fs Fe
#------------------------------------------------
dump            clear_dump all custom 1 ${dumps_path}/clear.dump x y z
run 0
undump          clear_dump
create_atoms    1 single 6 5.88 5.88
#------------------------------------------------
min_style       cg
minimize        1e-9 1e-9 5000 5000
#------------------------------------------------
velocity        all create $(2*v_temp) 352839 mom yes rot yes
fix             1 all nve
run 1000
reset_timestep 0
#------------------------------------------------
compute msd all msd
variable time equal time
variable sim_temp equal temp
variable press equal press
variable sia_msd equal c_msd[4]*atoms
fix data all print 1000 '${time};${sia_msd};${sim_temp};${press}' &
file ${other_path}/thermo_msd screen no title 'time;sia_msd;temp;press'
dump sia_dump all custom 1000 ${dumps_path}/sia.dump x y z
write_restart ${other_path}/0
restart 1000 ${other_path}/*
thermo_style custom time temp press v_sia_msd
thermo 1000
run ${total_timesteps}
#------------------------------------------------
